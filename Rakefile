require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('humanize_numbers', '1.0.0') do |e|
  e.description    = "Gem for Ruby on Rails to describe a number in words in english or spanish"
  e.url            = "https://github.com/gedera/humanize_numbers"
  e.author         = "Gabriel Edera"
  e.email          = "gab.edera@gmail.com"
  e.ignore_pattern = ["tmp/*", "script/*"]
  e.development_dependencies = []
end
